            </dependency>
        </dependencies>
    </dependencyManagement>
    <modules>
        <module>piranha</module>
        <module>piranha-jndi</module>
        <module>weld</module>
    </modules>
    <profiles>
        <profile>
            <id>test</id>
            <modules>
